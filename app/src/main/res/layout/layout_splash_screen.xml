<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLogoWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_white" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ivLogoWhite"
        android:layout_alignLeft="@+id/ivLogoWhite"
        android:layout_alignRight="@+id/ivLogoWhite"
        android:layout_alignStart="@+id/ivLogoWhite"
        android:layout_below="@+id/ivLogoWhite"
        android:layout_marginTop="@dimen/default_padding"
        android:theme="@style/AppTheme.White" />

</RelativeLayout>