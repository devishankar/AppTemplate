<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="navigation_drawer_list_image_style">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:tint">@color/colorNavDrawerImageTint</item>
    </style>

    <style name="navigation_drawer_list_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_toEndOf">@id/icon</item>
        <item name="android:layout_toRightOf">@id/icon</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:textColor">@color/colorNavDrawerText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_toLeftOf">@+id/counter</item>
        <item name="android:layout_toStartOf">@+id/counter</item>
    </style>

    <style name="navigation_drawer_list_item_counter_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="navigation_drawer_list_item_parent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingEnd">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingStart">@dimen/default_padding</item>
    </style>
</resources>